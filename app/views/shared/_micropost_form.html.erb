<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.text_field :title, placeholder: "Recipe title" %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new morsel..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>